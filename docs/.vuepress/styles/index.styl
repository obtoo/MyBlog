// h1标题渐变色
.page
  h1,
  h2,
  h3,
  h4,
  h5,
  h6
    font-weight: 600;
h1 {
  background-image: -webkit-linear-gradient(left,
  #22c1c3, #fdbb2d 25%, #22c1c3 50%, #fdbb2d 75%, #22c1c3);
  -webkit-text-fill-color: transparent;
  -webkit-background-clip: text;
  -webkit-background-size: 200% 100%;
  -webkit-animation: myGradientChange 1s infinite linear;
  animation: myGradientChange 1s infinite linear;
  font-weight: 600;
}
.description,
.card h2{
  background-image: -webkit-linear-gradient(left,
  #fdbb2d, #22c1c3 25%, #fdbb2d 50%, #22c1c3 75%, #fdbb2d);
  -webkit-text-fill-color: transparent;
  -webkit-background-clip: text;
  -webkit-background-size: 200% 100%;
  -webkit-animation: myGradientChange 1s infinite linear;
  animation: myGradientChange 1s infinite linear;
}
@keyframes myGradientChange  {
  0%{ background-position: 0 0;}
  100% { background-position: -100% 0;}
}
